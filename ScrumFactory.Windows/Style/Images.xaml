        <Setter Property="ToolTip" Value="{Binding ., Converter={StaticResource LocalizeConverter}}"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding}"  Value="0">
                <Setter Property="Source" Value="/Images/PermissionSets/ScrumMaster.gif"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding}"  Value="1">
                <Setter Property="Source" Value="/Images/PermissionSets/Team.gif"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding}"  Value="2">
                <Setter Property="Source" Value="/Images/PermissionSets/ProductOwner.gif"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding}"  Value="3">
                <Setter Property="Source" Value="/Images/PermissionSets/CommercialGuy.gif"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="BacklogItemOccurrenceImage" TargetType="{x:Type Image}">                        
        <Setter Property="ToolTip" Value="{Binding ., Converter={StaticResource LocalizeConverter}}"/>        
        <Setter Property="Width" Value="16"/>
        <Setter Property="Height" Value="16"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding}"  Value="0">
                <Setter Property="Source" Value="/Images/BacklogItemOccurrenceConstraint/planning.png"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding}"  Value="1">
                <Setter Property="Source" Value="{x:Null}"/>
            </DataTrigger>
