<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:props="clr-namespace:ScrumFactory.Windows.Properties"
                    xmlns:PresentationOptions="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
                    xmlns:SF_Converters="clr-namespace:ScrumFactory.Windows.Helpers.Converters;assembly=ScrumFactory.Windows.Helpers">

    <SF_Converters:LocalizeConverter x:Key="LocalizeConverter" />
    <SF_Converters:ImageSourceConverter x:Key="ImageSourceConverter"/>



    <DrawingImage x:Key="ShowTaskThumbImage" PresentationOptions:Freeze="True">
        <DrawingImage.Drawing>
            <ImageDrawing ImageSource="/Images/Toolbar/postItView.png" Rect="0,0,24,24" />
        </DrawingImage.Drawing>
    </DrawingImage>

    <Style x:Key="HasArtifactImage" TargetType="{x:Type Image}" PresentationOptions:Freeze="True">
