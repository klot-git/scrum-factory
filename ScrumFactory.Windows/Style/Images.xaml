                <Setter Property="Source" Value="/Images/BacklogItemOccurrenceConstraint/delivery.png"/>
            </DataTrigger>            
        </Style.Triggers>
    </Style>



    <Style x:Key="ProjectStatusImage" TargetType="{x:Type Image}">        
        <Setter Property="Stretch" Value="Uniform"/>
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="ToolTip" Value="{Binding ., Converter={StaticResource LocalizeConverter}}"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding}"  Value="0">
                <Setter Property="Source" Value="/Images/ProjectStatus/prjOportunity.png"/>
            </DataTrigger>            
            <DataTrigger Binding="{Binding}"  Value="1">
                <Setter Property="Source" Value="/Images/ProjectStatus/prjApproved.png"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding}"  Value="2">
                <Setter Property="Source" Value="/Images/ProjectStatus/prjRejected.png"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding}"  Value="3">
                <Setter Property="Source" Value="/Images/ProjectStatus/prjRunning.png"/>
            </DataTrigger>            
            <DataTrigger Binding="{Binding}"  Value="4">
                <Setter Property="Source" Value="/Images/ProjectStatus/prjDone.png"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding}"  Value="5">
                <Setter Property="Source" Value="/Images/ProjectStatus/prjSupport.png"/>
            </DataTrigger>
