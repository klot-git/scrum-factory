    <PathGeometry x:Key="NoneMemberAllocation">
        <PathFigure StartPoint="8 10" IsClosed="True" IsFilled="True" >
            <ArcSegment
                Size="4 4" Point="8 14"
                  IsLargeArc="True"                
                SweepDirection="Clockwise" />            
        </PathFigure>
    </PathGeometry>


    <PathGeometry x:Key="QuarterMemberAllocation">
        <PathFigure StartPoint="12 0" IsClosed="True">
            <ArcSegment
                Size="12 12"
                Point="24 12"                                                    
                SweepDirection="Clockwise" />
            <LineSegment Point="12 12" />
        </PathFigure>
    </PathGeometry>

    <PathGeometry x:Key="HalfMemberAllocation">
        <PathFigure StartPoint="12 0" IsClosed="True">
            <ArcSegment
                Size="12 12"
                Point="24 12"                                                    
                SweepDirection="Clockwise" />
            <ArcSegment
                Size="12 12"
                Point="12 24"                                                    
                SweepDirection="Clockwise" />
        </PathFigure>
    </PathGeometry>

    <PathGeometry x:Key="ThreeQuarterMemberAllocation">
        <PathFigure StartPoint="12 0" IsClosed="True">
            <ArcSegment
                Size="12 12"
                Point="24 12"                                                    
                SweepDirection="Clockwise" />
            <ArcSegment
                Size="12 12"
                Point="12 24"                                                    
                SweepDirection="Clockwise" />
            <ArcSegment
                Size="12 12"
                Point="0 12"                                                    
                SweepDirection="Clockwise" />
            <LineSegment Point="12 12" />
        </PathFigure>
    </PathGeometry>

    <PathGeometry x:Key="FullMemberAllocation">
        <PathFigure StartPoint="12 0" IsClosed="True">
            <ArcSegment
                Size="12 12"
                Point="24 12"                                                    
                SweepDirection="Clockwise" />
            <ArcSegment
                Size="12 12"
                Point="12 24"                                                    
                SweepDirection="Clockwise" />
            <ArcSegment
                Size="12 12"
                Point="0 12"                                                    
                SweepDirection="Clockwise" />
            <ArcSegment
                Size="12 12"
                Point="12 0"                                                    
                SweepDirection="Clockwise" />
        </PathFigure>
    </PathGeometry>
    
    <Style x:Key="DayAllocationPath" TargetType="{x:Type Path}">
        <Setter Property="Width" Value="30"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="StrokeLineJoin" Value="Round"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect  ShadowDepth="2" Opacity="0.5"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Fill">
            <Setter.Value>
                <SolidColorBrush Color="{StaticResource Red3Color}"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <DataTrigger Binding="{Binding .}" Value="0">
                <Setter Property="Path.Data" Value="{StaticResource NoneMemberAllocation}"/>
                <Setter Property="Path.Fill">
                    <Setter.Value>
                        <SolidColorBrush Color="Transparent"/>
                    </Setter.Value>                    
                </Setter>
                <Setter Property="Path.ToolTip" Value="{x:Static props:Resources.dayNull_allocation}"/>                
                <!--<Setter Property="Path.Visibility" Value="Collapsed"/>-->
            </DataTrigger>
            <DataTrigger Binding="{Binding .}" Value="1">
                <Setter Property="Path.Data" Value="{StaticResource QuarterMemberAllocation}"/>
                <Setter Property="Path.ToolTip" Value="{x:Static props:Resources.day14_allocation}"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding .}" Value="2">
                <Setter Property="Path.Data" Value="{StaticResource HalfMemberAllocation}"/>
                <Setter Property="Path.ToolTip" Value="{x:Static props:Resources.day12_allocation}"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding .}" Value="3">
                <Setter Property="Path.Data" Value="{StaticResource ThreeQuarterMemberAllocation}"/>
                <Setter Property="Path.ToolTip" Value="{x:Static props:Resources.day34_allocation}"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding .}" Value="4">
                <Setter Property="Path.Data" Value="{StaticResource FullMemberAllocation}"/>
                <Setter Property="Path.ToolTip" Value="{x:Static props:Resources.day44_allocation}"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="AllocationToolTipTextBlock" TargetType="TextBlock">
        <Style.Triggers>
            <DataTrigger Binding="{Binding .}" Value="1">
                <Setter Property="Text" Value="{x:Static props:Resources.day14_allocation}"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding .}" Value="2">
                <Setter Property="Text" Value="{x:Static props:Resources.day12_allocation}"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding .}" Value="3">
                <Setter Property="Text" Value="{x:Static props:Resources.day34_allocation}"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding .}" Value="4">
                <Setter Property="Text" Value="{x:Static props:Resources.day44_allocation}"/>
            </DataTrigger>
        </Style.Triggers>

    </Style>

    <Storyboard x:Key="ClockStoryboard" PresentationOptions:Freeze="True">
        <DoubleAnimation                
                Storyboard.TargetProperty="(Path.RenderTransform).(RotateTransform.Angle)"
                From="0"
                To="360"
                Duration="0:0:1"
                RepeatBehavior="Forever" />
    </Storyboard>
    
    <Style x:Key="DownArrowPath" TargetType="Path">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Fill">
            <Setter.Value>
                <SolidColorBrush Color="{StaticResource Green2Color}"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Stroke">
            <Setter.Value>
                <SolidColorBrush Color="{StaticResource Green4Color}"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Data">
            <Setter.Value>
                <PathGeometry>
                    <PathFigure StartPoint="0 0"  IsClosed="True">                        
                        <LineSegment Point="12 0" />
                        <LineSegment Point="6 8" />
                    </PathFigure>
                </PathGeometry>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Margin" Value="0,1,0,0"/>
                <Setter Property="Effect" Value="{x:Null}"/>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="False">
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect ShadowDepth="1" Opacity="0.3"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="ClockPath" TargetType="Path">
        <Setter Property="Fill" Value="{StaticResource TrackClockBrush}"/>
        <Setter Property="Data">
            <Setter.Value>
                <PathGeometry>
                    <PathFigure StartPoint="12 0"  IsClosed="True">
                        <ArcSegment Size="12 12" Point="24 12" SweepDirection="Clockwise" />
                        <LineSegment Point="12 12" />
                    </PathFigure>
                </PathGeometry>
            </Setter.Value>
        </Setter>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <RotateTransform Angle="0" CenterX="12" CenterY="12"/>
            </Setter.Value>
        </Setter>       
    </Style>

    <Style x:Key="ClockPath_VM" TargetType="Path" BasedOn="{StaticResource ClockPath}">      
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsTracking}" Value="True">
                <DataTrigger.EnterActions>
                    <BeginStoryboard x:Name="clockStory" Storyboard="{StaticResource ClockStoryboard}"/>
                </DataTrigger.EnterActions>
                <DataTrigger.ExitActions>
                    <StopStoryboard BeginStoryboardName="clockStory"/>
                </DataTrigger.ExitActions>
            </DataTrigger>
            <DataTrigger Binding="{Binding IsTracking}" Value="False">
                <Setter Property="Path.Visibility" Value="Hidden"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>






</ResourceDictionary>