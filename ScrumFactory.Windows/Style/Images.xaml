                <Setter Property="Source" Value="{x:Static props:ImageResources.WORKING_PANEL_TITLE}"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding}"  Value="2">
                <Setter Property="Source" Value="{x:Static props:ImageResources.DONE_PANEL_TITLE}"/>
            </DataTrigger>            
        </Style.Triggers>
    </Style>

    <Style x:Key="TaskTypeImage" TargetType="{x:Type Image}">
        <Setter Property="Stretch" Value="Uniform"/>
        <Setter Property="Width" Value="24"/>
        <Setter Property="Height" Value="24"/>
        <Setter Property="ToolTip" Value="{Binding ., Converter={StaticResource LocalizeConverter}}"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding}"  Value="0">
                <Setter Property="Source" Value="/Images/TaskTypes/improvement.png"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding}"  Value="1">
                <Setter Property="Source" Value="/Images/TaskTypes/postit.png"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding}"  Value="2">
                <Setter Property="Source" Value="/Images/TaskTypes/postit.png"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding}"  Value="3">
                <Setter Property="Source" Value="/Images/TaskTypes/impediment.png"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding}"  Value="4">
                <Setter Property="Source" Value="/Images/TaskTypes/bug.png"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding}"  Value="5">
                <Setter Property="Source" Value="/Images/TaskTypes/bug2.png"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="TaskStatusImage" TargetType="{x:Type Image}">
        <Setter Property="Stretch" Value="Uniform"/>
        <Setter Property="Width" Value="24"/>
        <Setter Property="Height" Value="24"/>                
        <Style.Triggers>
            <DataTrigger Binding="{Binding}"  Value="2">
                <Setter Property="Source" Value="/Images/TaskStatus/done.png"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding}"  Value="3">
                <Setter Property="Source" Value="/Images/TaskStatus/canceled.png"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="IsTaskCanceledImage" TargetType="{x:Type Image}">
        <Setter Property="Image.Visibility" Value="Collapsed"/>
        <Setter Property="Stretch" Value="Uniform"/>
        <Setter Property="Width" Value="24"/>
        <Setter Property="Height" Value="24"/>
        <Setter Property="ToolTip" Value="{x:Static props:Resources.Task_canceled}"/>
        <Setter Property="Source" Value="/Images/TaskStatus/canceled.png"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding}"  Value="true">
                <Setter Property="Image.Visibility" Value="Visible"/>
            </DataTrigger>                        
        </Style.Triggers>
    </Style>

    <Style x:Key="TaskTypeOnPostItImage" TargetType="{x:Type Image}" BasedOn="{StaticResource TaskTypeImage}">
        <Setter Property="Visibility" Value="Collapsed"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding}"  Value="0">
                <Setter Property="Visibility" Value="Visible"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding}"  Value="4">
                <Setter Property="Visibility" Value="Visible"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding}"  Value="5">
                <Setter Property="Visibility" Value="Visible"/>
            </DataTrigger>            
        </Style.Triggers>
    </Style>
    
    

    <Style x:Key="PermissionSetImage" TargetType="{x:Type Image}">
