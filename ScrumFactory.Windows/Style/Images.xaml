        <Setter Property="Width" Value="16"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="Visibility" Value="Collapsed"/>
        <Style.Triggers>            
            <DataTrigger Binding="{Binding}" Value="True">
                <Setter Property="Visibility" Value="Visible"/>
            </DataTrigger>            
        </Style.Triggers>
    </Style>

